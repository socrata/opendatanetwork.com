<div id="captcha-modal" style="display: none;" role="dialog" aria-labelledby="captcha-title" aria-describedby="captcha-description">
  <div class="captcha-container">
    <button type="button" class="captcha-close" id="captcha-close" aria-label="Close">&times;</button>
    
    <div class="captcha-title" id="captcha-title">Verify Human Access</div>
    <p id="captcha-description">To continue to the requested data, please complete this verification:</p>
    
    <form id="captcha-form">
      <div class="captcha-challenge-wrapper">
        <div id="captcha-challenge" class="captcha-text-challenge"></div>
      </div>
      
      <div class="captcha-input-group">
        <input type="text" id="captcha-input" class="captcha-input" placeholder="Enter your answer here" autocomplete="off">
        <div id="captcha-error" class="captcha-error"></div>
      </div>
      
      <button type="submit" id="captcha-submit" class="captcha-submit">Verify</button>
    </form>
    
    <div class="captcha-note">
      This verification helps prevent automated data scraping.
    </div>

    <div class="captcha-loading" id="captcha-loading" style="display: none;">
      <div class="captcha-spinner"></div>
      <div>Loading data...</div>
    </div>
  </div>
</div>